@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "HeadingEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("HeadingEdit", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık ID")
        @Html.TextBoxFor(x => x.HeadId, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadId)
        <br />
        <br />
        @Html.Label("Yazar ID")
        @Html.TextBoxFor(x => x.WriterId, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterId)
        <br />
        <br />
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadName)
        <br />
        <br />
        @Html.Label("Kategori Seç")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.ctg, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryId)
        <br />
        <br />
        @Html.Label("Tarih")
        @Html.TextBoxFor(x => x.HeadDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadDate)
        <br />
        <br />
        @Html.Label("Yazar Seç")
        @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.wrt, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterId)
        <br />
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>}
